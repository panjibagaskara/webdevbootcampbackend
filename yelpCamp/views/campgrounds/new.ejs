<%- include('../partials/header') %>
<div class='container mt-3'>
	<h1 style='text-align: center;'>Create new campgrounds</h1>
	<div class='row'>
		<div style='width: 30%; margin: 25px auto;'>
			<form action='/campgrounds' method='POST'>
				<div class='form-group'>
					<input class='form-control' type='text' name='campName' placeholder='Name'>
				</div>
				<div class='form-group'>
					<input class='form-control' type='text' name='campImage' placeholder='Image URL'>
				</div>
				<div class='form-group'>
					<input class='form-control' type='number' name='campPrice' placeholder='Price' min="0" step="1000">
				</div>
				<div class='form-group'>
					<textarea class='form-control' type='text' name='campDescription' placeholder='Description'></textarea>
				</div>
				<div class='form-group'>
					<button class='btn btn-lg btn-primary btn-block' type='submit'>Submit</button>
				</div>
			</form>
			<a href='/campgrounds'>Go Back</a>
		</div>
	</div>
</div>

<%- include('../partials/footer') %>