<%- include('../partials/header') %>
<div class='container mt-3'>
	<h1 style='text-align: center;'>Edit <%= campground.name %></h1>
	<div class='row'>
		<div style='width: 30%; margin: 25px auto;'>
			<form action='/campgrounds/<%= campground._id %>?_method=PUT' method='POST'>
				<div class='form-group'>
					<input class='form-control' type='text' name='camp[name]' placeholder='Name' value='<%= campground.name %>'>
				</div>
				<div class='form-group'>
					<input class='form-control' type='text' name='camp[img_url]' placeholder='Image URL' value='<%= campground.img_url %>'>
				</div>
				<div class='form-group'>
					<textarea class='form-control' type='text' name='camp[description]' placeholder='Description'><%= campground.description %></textarea>
				</div>
				<div class='form-group'>
					<button class='btn btn-lg btn-primary btn-block' type='submit'>Submit</button>
				</div>
			</form>
			<a href='/campgrounds/<%= campground._id %>'>Go Back</a>
		</div>
	</div>
</div>

<%- include('../partials/footer') %>