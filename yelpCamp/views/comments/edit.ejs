<%- include('../partials/header') %>
<div class='container mt-3'>
	<h1 style='text-align: center;'>Edit Comment</h1>
	<div class='row'>
		<div style='width: 30%; margin: 25px auto;'>
			<form action='/campgrounds/<%= comment.campID %>/comments/<%= comment._id %>?_method=PUT' method='POST'>
				<div class='form-group'>
					<textarea class='form-control' type='text' name='comment[text]' placeholder='Comment'><%= comment.text %></textarea>
				</div>
				<div class='form-group'>
					<button class='btn btn-lg btn-primary btn-block' type='submit'>Submit</button>
				</div>
			</form>
			<a href='/campgrounds/<%= comment.campID %>'>Go Back</a>
		</div>
	</div>
</div>

<%- include('../partials/footer') %>